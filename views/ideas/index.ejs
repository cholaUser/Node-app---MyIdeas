<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('.././partials/head') %>
</head>
<body>
    <header><%- include('.././partials/header') %></header>

    <div class="container">
        <div class="mb-4 flex-center">
            <h1>My Ideas</h1>
            <a href="/ideas/new" class="a_img_margin">
                <img src="/img/plus-square.svg" width="30" height="30" alt="">
            </a>
        </div>
        <% ideas.forEach(idea => { %>
            <div class="card mb-5">
                <div class="card-body">
                    <h4 class="card-title">
                        <%= idea.title %>
                    </h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%= idea.createdAt.toLocaleDateString() %>
                    </div>
                    <div class="flex-between">
                        <div>
                            <a href="ideas/<%= idea.id %>" class="btn btn-outline-primary margin01">Read</a> <!-- byÅ‚o id -->
                            <a href="ideas/edit/<%= idea.id %>" class="btn btn-outline-secondary margin01"> Edit </a>
                        </div>
                        <form action="/ideas/<%= idea.id %>?_method=DELETE" method="post" class="d-inline margin01">
                            <button type="submit" class="btn btn-outline-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

    <footer><%- include('.././partials/footer') %></footer>
</body>
</html>